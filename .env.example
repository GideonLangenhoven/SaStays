# .env.example - Copy this to .env.local and fill in your values

# API Configuration
VITE_API_URL=http://localhost:5001/api
VITE_API_TIMEOUT=10000

# Supabase Configuration
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Payment Gateway Configuration
VITE_OZOW_SITE_CODE=your-ozow-site-code
VITE_OZOW_PRIVATE_KEY=your-ozow-private-key
VITE_PAYFAST_MERCHANT_ID=your-payfast-merchant-id
VITE_PAYFAST_MERCHANT_KEY=your-payfast-merchant-key
VITE_PAYFAST_PASSPHRASE=your-payfast-passphrase
VITE_PAYFAST_SANDBOX=true

# Google Services
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_GOOGLE_ANALYTICS_ID=your-google-analytics-id
VITE_GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id

# Communication Services
VITE_TWILIO_ACCOUNT_SID=your-twilio-account-sid
VITE_TWILIO_PHONE_NUMBER=your-twilio-phone
VITE_WHATSAPP_BUSINESS_ID=your-whatsapp-business-id

# Email Services
VITE_MAILCHIMP_API_KEY=your-mailchimp-api-key
VITE_SENDGRID_API_KEY=your-sendgrid-api-key

# Application Configuration
VITE_APP_NAME=SaStays
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="South Africa's Premier Property Booking Platform"
VITE_APP_DOMAIN=https://sastays.com
VITE_SUPPORT_EMAIL=support@sastays.com
VITE_SUPPORT_PHONE=+27-10-593-0123

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_I18N=true
VITE_ENABLE_DARK_MODE=true

# Development
VITE_DEBUG=false
VITE_LOG_LEVEL=info

# Security
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SECURITY_HEADERS=true

# Performance
VITE_LAZY_LOADING=true
VITE_IMAGE_OPTIMIZATION=true
VITE_CDN_URL=https://cdn.sastays.com

# Social Media
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_TWITTER_HANDLE=@SaStays
VITE_INSTAGRAM_HANDLE=@sastays_official